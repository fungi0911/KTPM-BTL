  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:5000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Setup",
      "item": [
        {
          "name": "Login (Get Token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', jsonData.access_token);",
                  "    pm.environment.set('access_token', jsonData.access_token);",
                  "    console.log('Token saved:', jsonData.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/auth/login",
              "host": ["http://localhost:5000"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Check Vendor State (Initial)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const jsonData = pm.response.json();",
                  "pm.test('Circuit is closed initially', function() {",
                  "    pm.expect(jsonData.state).to.eql('closed');",
                  "});",
                  "",
                  "console.log('Initial state:', JSON.stringify(jsonData, null, 2));"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/warehouse_items/vendor_state",
              "host": ["http://localhost:5000"],
              "path": ["warehouse_items", "vendor_state"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. Normal Operations",
      "item": [
        {
          "name": "Test 1: Normal Request (OK mode)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const jsonData = pm.response.json();",
                  "pm.test('Got price data', function() {",
                  "    pm.expect(jsonData.data).to.have.property('price');",
                  "});",
                  "",
                  "pm.test('Only 1 attempt (no retry)', function() {",
                  "    pm.expect(jsonData.attempts).to.eql(1);",
                  "});",
                  "",
                  "pm.test('Circuit is closed', function() {",
                  "    pm.expect(jsonData.state.state).to.eql('closed');",
                  "});",
                  "",
                  "console.log('Response:', JSON.stringify(jsonData, null, 2));"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/warehouse_items/vendor_price/1?mode=ok",
              "host": ["http://localhost:5000"],
              "path": ["warehouse_items", "vendor_price", "1"],
              "query": [
                {
                  "key": "mode",
                  "value": "ok"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Test 2: Multiple OK Requests (5x)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const jsonData = pm.response.json();",
                  "pm.test('Metrics show multiple calls', function() {",
                  "    pm.expect(jsonData.state.metrics.calls).to.be.above(0);",
                  "    pm.expect(jsonData.state.metrics.successes).to.be.above(0);",
                  "});",
                  "",
                  "console.log('Current metrics:', jsonData.state.metrics);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Run this request 5 times",
                  "const maxIterations = 5;",
                  "const currentIteration = pm.collectionVariables.get('iteration') || 0;",
                  "",
                  "if (currentIteration < maxIterations - 1) {",
                  "    pm.collectionVariables.set('iteration', currentIteration + 1);",
                  "    postman.setNextRequest(pm.info.requestName);",
                  "} else {",
                  "    pm.collectionVariables.set('iteration', 0);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/warehouse_items/vendor_price/2?mode=ok",
              "host": ["http://localhost:5000"],
              "path": ["warehouse_items", "vendor_price", "2"],
              "query": [
                {
                  "key": "mode",
                  "value": "ok"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. Retry Behavior",
      "item": [
        {
          "name": "Test 3: Flaky Vendor (30% fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.test('Request eventually succeeded', function() {",
                  "        pm.response.to.have.status(200);",
                  "    });",
                  "    ",
                  "    console.log('Attempts used:', jsonData.attempts);",
                  "    console.log('Total retries so far:', jsonData.state.metrics.retry_attempts_total);",
                  "} else {",
                  "    console.log('Request failed after all retries');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/warehouse_items/vendor_price/3?mode=flaky&fail_rate=0.3",
              "host": ["http://localhost:5000"],
              "path": ["warehouse_items", "vendor_price", "3"],
              "query": [
                {
                  "key": "mode",
                  "value": "flaky"
                },
                {
                  "key": "fail_rate",
                  "value": "0.3"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Test 4: High Fail Rate (70%)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.test('Succeeded after retries', function() {",
                  "        pm.expect(jsonData.attempts).to.be.above(1);",
                  "    });",
                  "    console.log('✓ Success after', jsonData.attempts, 'attempts');",
                  "} else if (pm.response.code === 502) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.test('Failed after max retries', function() {",
                  "        pm.expect(jsonData.msg).to.include('retry');",
                  "    });",
                  "    console.log('✗ Failed after', jsonData.attempts, 'attempts');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/warehouse_items/vendor_price/4?mode=flaky&fail_rate=0.7",
              "host": ["http://localhost:5000"],
              "path": ["warehouse_items", "vendor_price", "4"],
              "query": [
                {
                  "key": "mode",
                  "value": "flaky"
                },
                {
                  "key": "fail_rate",
                  "value": "0.7"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Test 5: Compare With vs Without Retry",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const jsonData = pm.response.json();",
                  "",
                  "if (jsonData.strategy === 'raw') {",
                  "    console.log('RAW mode (no retry):', pm.response.code);",
                  "} else {",
                  "    console.log('RESILIENT mode:', pm.response.code, '- attempts:', jsonData.attempts);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/warehouse_items/vendor_price/5?mode=flaky&fail_rate=0.5&strategy=raw",
              "host": ["http://localhost:5000"],
              "path": ["warehouse_items", "vendor_price", "5"],
              "query": [
                {
                  "key": "mode",
                  "value": "flaky"
                },
                {
                  "key": "fail_rate",
                  "value": "0.5"
                },
                {
                  "key": "strategy",
                  "value": "raw",
                  "description": "Change to 'resilient' or remove to see difference"
                }
              ]
            }
          },
          "response": []
        }
      ]
